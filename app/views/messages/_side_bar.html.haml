.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        LGTM
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "top-items__btn" do
          = icon('far','edit', class: 'top-items__btn')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'top-items__btn')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-names
        = link_to group_messages_path(group) do
          .group-names__name
            = group.name
          .group-names__message
            = group.show_last_message
