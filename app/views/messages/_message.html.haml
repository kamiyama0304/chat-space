.messages__message-list
  .list-name
    = message.user.name
    .list-name__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .list-message
    - if message.content.present?
      %p.list-message__content
        = message.content
    = image_tag message.image.url, class: 'list-message__image' if message.image.present?